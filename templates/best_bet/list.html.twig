{% extends 'base.html.twig' %}

{% block title %}
Best bets
{% endblock %}

{% block icon %}
    <i class="fas fa-search-dollar"></i>
{% endblock %}

{% block newbutton %}
    <a href="{{ path('best_bet_create') }}" class="btn btn-primary btn-sm" role="button" aria-pressed="true">New
        best bet</a>
{% endblock %}

{% block body %}
    <table class="table">
        <thead>
        <tr>
            <th>Title</th>
            <th>URL</th>
            <th>Terms</th>
            <td class="action-td">&nbsp;</td>
        </tr>
        </thead>
        <tbody>
        {% for bet in betlist %}
            <tr{% if bet.needsUpdate %} class="needs-update"{% endif %}>
                <td><a href="{{ path('best_bet_edit', {'id': bet.id}) }}">{{ bet.title }}</a></td>
                <td>{{ bet.link |truncate(50) }}</td>
                <td>
                    {% for term in bet.terms %}
                        {{ term }}<br>
                    {% endfor %}
                </td>
                <td class="action-td">
                    {{ include('best_bet/_delete_form.html.twig') }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(betlist) }}
    </div>
{% endblock %}

